<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GhadirOnlineShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px !important">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Admin/index">ورود</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" dir="rtl">

        <div class="masthead">
            <nav>
                <ul class="nav nav-justified" style="padding-right: 0px;">
                    <li class="active col-sm-6 col-md-4 li-custom1"><a href="/">Home</a></li>
                    <li class="col-sm-6 col-md-4 li-custom2">
                        <a href="/ShopCart">
                            <i class="glyphicon glyphicon-shopping-cart"> سبد خرید : <span id="shopcart">0</span> کالا</i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div> <!-- /container -->

    <div class="container body-content renderBodyCustom" dir="rtl">
        @RenderBody()
    </div>

    <footer class="clearfix text-center">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function AddToCart(id) {
            $.ajax({
                url: "/ShopCart/AddToCart/" + id,
                type: "Get"
            }).done(function (result) {
                $("#shopcart").html(result);
            });
        }

        $(function () {
            $("#shopcart").load("/ShopCart/ShopCartCount");
        });
    </script>
</body>
</html>
