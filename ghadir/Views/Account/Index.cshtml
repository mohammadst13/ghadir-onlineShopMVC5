@using ghadir.Models

@{
    ViewBag.Title = "Index";
    var login = (LoginViewModel)ViewBag.login;
    var register = (RegisterViewModel)ViewBag.register;
}

<h2 class="pr-32">ورود</h2>

<div class="container">
    <div class="col-lg-12">
        @using (Html.BeginForm(Html.BeginForm("Login", "Account", new { area = "" }, FormMethod.Post)))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => login.UserMail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => login.UserMail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => login.UserMail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => login.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => login.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => login.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => login.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => login.RememberMe)
                            @Html.ValidationMessageFor(model => login.RememberMe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary" value="ورود" name="submitValue">ورود</button>
                    </div>
                </div>
            </div>
        }
    </div>
